{
    "preset": "laravel",
    "exclude": [
        "docker",
        "_ide_helper.php",
        "_ide_helper_models.php",
        ".phpstorm.meta.php"
    ],
    "notName": ["*.blade.php", "_ide_helper_*.php", ".phpstorm.meta.php"],
    "rules": {
        "class_attributes_separation": {
            "elements": {
                "method": "one"
            }
        },
        "no_extra_blank_lines": {
            "tokens": ["extra", "use", "use_trait"]
        }
    }
}
